{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  }, 
 "include": [
    "src/**/*.ts",
   "__tests__/**/*.ts"
, "server.ts"  ],
  "exclude": [
    "node_modules",
    "./coverage",
    "./dist",
    "jest.config.js"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
}
